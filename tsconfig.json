{
  "include": ["src/**/*.js"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "strict": false,
    "skipLibCheck": true
  }
}
